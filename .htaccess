

RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-d

RewriteCond %{REQUEST_FILENAME}\.php -f

RewriteRule ^(.*)$ $1.php [NC,L] 



ErrorDocument 404 /404

ErrorDocument 500 /500

ErrorDocument 403 /403






Options All -Indexes



<Files .htaccess>

order allow,deny

deny from all

</Files>



DirectoryIndex 403.html

IndexIgnore *



<Files ~ "^.*\.([Hh][Tt][Aa])">

order allow,deny

deny from all

satisfy all 

</Files>


AuthUserFile /css/htpasswd

AuthType Basic

AuthName “Login Details”

Require valid-user

















